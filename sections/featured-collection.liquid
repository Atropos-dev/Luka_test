</div>

<script>  
  document.addEventListener('DOMContentLoaded', function () {
  new Swiper('.featured-collection-slider', {
    grabCursor: true,
    speed: 100,
    mousewheel: {
      invert: false,
    },
    loop: true,
    slidesPerView: 1.2,
    spaceBetween: {{ settings.spacing_grid_horizontal }},
    direction: 'horizontal',
    scrollbar: {
        el: '.swiper-scrollbar',
        draggable: true,
      },
    breakpoints: {
      768: {
        slidesPerView: 3,
      },
      1024: {
        slidesPerView: 4.7,
      },
    },
  });
});

document.addEventListener('DOMContentLoaded', function () {
  document.querySelectorAll('.featured-collection').forEach(section => {
    const cards = section.querySelectorAll('.product-card');
    const btn = section.querySelector('.show-more-btn');
    const initialVisible = 4;
    for (let i = 0; i < initialVisible && i < cards.length; i++) {
      cards[i].classList.add('is-visible');
    }
    btn.addEventListener('click', () => {
      const start = initialVisible;
      for (let i = start; i < cards.length; i++) {
        cards[i].classList.add('is-visible');
      }
      if (start < cards.length) {
        cards[start].scrollIntoView({ behavior: 'smooth', block: 'start' });
      }
      btn.style.display = 'none';
    });
  });
});
</script>

