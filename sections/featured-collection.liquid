        {% assign skip_card_product_styles = false %}
        {% if section.settings.swiper_slider %}
          <div class="{% if section.settings.swiper_slider %}swiper-wrapper tw-pb-[55px]{% endif %}">
        {% endif %}
          {%- if section.settings.collection.products.size > 0 -%}
            {% assign lazy_load = false %}
